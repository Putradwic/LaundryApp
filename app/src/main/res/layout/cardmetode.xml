<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="8dp"
    android:id="@+id/cardmetode">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/PilihMetode"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- QRIS Button -->
        <Button
            android:id="@+id/btn_qris"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="ðŸ’³ QRIS"
            android:textSize="16sp"
            android:layout_marginBottom="12dp"
            android:textColor="@color/black"
            android:backgroundTint="@color/abu"
            app:cornerRadius="8dp" />

        <!-- Bayar Nanti Button -->
        <Button
            android:id="@+id/btn_bayar_nanti"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="@string/BayarNanti"
            android:textSize="16sp"
            android:layout_marginBottom="12dp"
            android:textColor="@color/black"
            android:backgroundTint="@color/kuning"
            app:cornerRadius="8dp" />

        <!-- Tunai Button -->
        <Button
            android:id="@+id/btn_tunai"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="@string/Tunai"
            android:textSize="16sp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="@color/biru"
            android:textColor="@color/black"
            app:cornerRadius="8dp" />

        <!-- Cancel Button -->
        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Batal"
            android:textColor="@color/black"
            android:textSize="14sp"
            style="?android:attr/borderlessButtonStyle" />

    </LinearLayout>

</androidx.cardview.widget.CardView>