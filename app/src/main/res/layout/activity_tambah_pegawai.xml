<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tambah_pegawai"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pelanggan.tambah_pelanggan"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvjudul_tambah_pegawai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tambah_pegawai_judul"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        android:padding="10dp"
        android:layout_marginVertical="10dp"/>


    <TextView
        android:id="@+id/tvnama_pegawai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="35dp"
        android:text="@string/nama_lengkap"
        android:textSize="18sp"
        android:padding="5dp"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/etnama_pegawai"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="35dp"
        android:background="@drawable/edittext"
        android:hint="@string/nama_lengkap"
        android:inputType="textPersonName"
        android:padding="7dp"/>

    <TextView
        android:id="@+id/tvalamat_pegawai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="35dp"
        android:layout_marginTop="20dp"
        android:text="@string/pegawai_alamat"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/etalamat_pegawai"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="35dp"
        android:background="@drawable/edittext"
        android:hint="@string/pegawai_alamat"
        android:padding="7dp"/>

    <TextView
        android:id="@+id/tvnohp_pegawai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="35dp"
        android:layout_marginTop="20dp"
        android:text="@string/pelanggan_nohp"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/etnohp_pegawai"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="35dp"
        android:background="@drawable/edittext"
        android:hint="@string/pelanggan_nohp"
        android:inputType="phone"
        android:padding="7dp"/>

    <TextView
        android:id="@+id/tvnama_cabang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="35dp"
        android:layout_marginTop="20dp"
        android:text="@string/pegawai_cabang"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/etnama_cabang"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="35dp"
        android:background="@drawable/edittext"
        android:hint="@string/pegawai_cabang"
        android:padding="7dp"/>

    <Button
        android:id="@+id/bttambah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingHorizontal="50dp"
        android:text="@string/add"
        android:layout_gravity="center"/>


</LinearLayout>