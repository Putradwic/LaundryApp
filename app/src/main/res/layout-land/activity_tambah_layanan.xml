<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tambah_layanan"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".layanan.tambah_layanan">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <ImageView
                android:id="@+id/backarrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:padding="5dp"
                android:src="@drawable/baseline_arrow_back_24" />

            <TextView
                android:id="@+id/tvjudul_tambah_layanan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/TambahLayananBaru"
                android:textAlignment="center"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/tvnama_pelanggan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:text="@string/Nama"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/etnama_layanan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/edittext"
                android:hint="@string/HintNama"
                android:inputType="textPersonName"
                android:maxLength="40"
                android:padding="12dp"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvharga_layanan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:text="@string/Harga"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/etharga_layanan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/edittext"
                android:hint="@string/HintHarga"
                android:inputType="numberDecimal"
                android:maxLength="12"
                android:padding="12dp"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvnama_cabang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:text="@string/Cabang"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/etnama_cabang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/edittext"
                android:hint="@string/HintCabang"
                android:maxLength="32"
                android:padding="12dp"
                android:textSize="20sp" />

            <Button
                android:id="@+id/bttambah"
                style="@style/colortext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="20dp"
                android:padding="10dp"
                android:text="@string/add"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btedit"
                style="@style/colortext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sunting"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="20dp"
                android:padding="10dp"
                android:visibility="gone"
                />

        </LinearLayout>

    </LinearLayout>


</ScrollView>